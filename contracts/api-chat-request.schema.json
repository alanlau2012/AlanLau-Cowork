{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chat API Request",
  "description": "Schema for POST /api/chat request body",
  "type": "object",
  "required": ["message"],
  "properties": {
    "message": {
      "type": "string",
      "description": "User message content",
      "minLength": 1,
      "maxLength": 100000
    },
    "chatId": {
      "type": "string",
      "description": "Chat session identifier for resuming conversations",
      "pattern": "^chat_[0-9]+_[a-z0-9]+$"
    },
    "userId": {
      "type": "string",
      "description": "User identifier for Composio session management",
      "default": "default-user"
    }
  },
  "additionalProperties": false
}
